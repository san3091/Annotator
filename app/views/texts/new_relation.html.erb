<div class="container">
    <div class="row">
      <div class="col s6">
        <%= render @text %>
      </div>
      <div class="col s6">
        <div class="container">
          <% @texts.each do |text| %>
            <div class="section">
              <h4><%= text.title %></h4>
              <p><%= text.content %></p>
            </div>
            <div class="divider"></div>
          <% end %>
        </div>
      </div>
    </div>
</div>
